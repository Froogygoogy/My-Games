<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="MyGames.showGame.ShowGameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name" />

        <TextView
            android:id="@+id/textViewPublishers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Publishers" />

        <TextView
            android:id="@+id/textViewRelease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Release Date" />

        <TextView
            android:id="@+id/textViewPlatforms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Platforms" />

        <TextView
            android:id="@+id/textViewGenres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Genres" />

        <TextView
            android:id="@+id/textViewPegi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PEGI" />

        <TextView
            android:id="@+id/textViewComent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comment" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <RatingBar
                    android:id="@+id/ratingBarTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <RatingBar
                    android:id="@+id/ratingBarRating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageViewCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_delete" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Summary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewWanting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onWantingSelected"
                android:text="Wanting" />

            <TextView
                android:id="@+id/textViewPlaying"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onPlayingSelected"
                android:text="Playing" />

            <TextView
                android:id="@+id/textViewPlayed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onPlayedSelected"
                android:text="Played" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
